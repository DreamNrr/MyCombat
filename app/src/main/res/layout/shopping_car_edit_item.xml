<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9000"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_gov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:button="@drawable/checkbox_selector"
            android:clickable="false" />

        <LinearLayout
            android:id="@+id/ll_goods_car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_gov"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_launcher"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">


                <com.example.wzh.mycombat.view.AddSubView
                    android:id="@+id/AddSubView"
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    app:maxValue="12"
                    app:minValue="1"
                    app:numberAddBackground="@drawable/ic_plus"
                    app:numberSubBackground="@drawable/ic_minus"
                    app:value="1" />

                <TextView
                    android:id="@+id/tv_desc_gov_edit"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="华硕200U "
                    android:textColor="#A09E9E"
                    android:textSize="10sp"
                    android:visibility="visible" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/tv_price_gov"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="￥0.0"
                        android:textColor="#6F98C3"
                        android:textSize="10sp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#6F98C3"
            android:gravity="center"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </LinearLayout>


    <View
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff" />


</LinearLayout>
