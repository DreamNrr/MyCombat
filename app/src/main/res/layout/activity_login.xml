<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <View
        android:id="@+id/over_lay_vw"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#66000000"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_login"
        android:orientation="vertical">

        <include layout="@layout/vw_login_title_bar" />

        <ImageView
            android:layout_width="49.0dip"
            android:layout_height="51.5dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30.0dip"
            android:src="@drawable/ic_login_logo" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="60.0dip">

            <ImageView
                android:id="@+id/login_mobile_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_login_user" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_below="@id/login_mobile_iv"
                android:layout_marginTop="10.0dip"
                android:background="@android:color/white" />

            <EditText
                android:id="@+id/mobile_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14.0dip"
                android:layout_toRightOf="@id/login_mobile_iv"
                android:background="@null"
                android:hint="用户名/邮箱/手机号"
                android:textColor="@android:color/white"
                android:textColorHint="#fff"
                android:textSize="13.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="25.0dip">>

            <ImageView
                android:id="@+id/login_verify_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_login_password" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_below="@id/login_verify_iv"
                android:layout_marginTop="10.0dip"
                android:background="@android:color/white" />

            <EditText
                android:id="@+id/password_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14.0dip"
                android:layout_toRightOf="@id/login_verify_iv"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="#fff"
                android:textSize="13.0sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/forgot_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="20.0dip"
            android:text="忘记密码?"
            android:textColor="#fff"
            android:textSize="13.0sp" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="25.0dip"
            android:background="@android:color/black"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="点击此处注册..."
            android:textColor="#fff"
            android:textSize="15.0sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25.0dip"
            android:gravity="center_vertical">

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="18.0dip"
                android:layout_weight="1.0"
                android:background="#ffeeeeee" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="使用社交帐号"
                android:textColor="#ffeeeeee"
                android:textSize="12.0sp" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="18.0dip"
                android:layout_weight="1.0"
                android:background="#ffeeeeee" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/loginApp_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:scaleType="center"
                android:src="@drawable/app_weibo" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0dip"
                android:layout_weight="1.0" />

            <ImageButton
                android:id="@+id/loginApp_tecentWeixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:scaleType="center"
                android:src="@drawable/app_tencent_weixin" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0dip"
                android:layout_weight="1.0" />

            <ImageButton
                android:id="@+id/loginApp_tencentQQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:scaleType="center"
                android:src="@drawable/app_tencent_qq" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0dip"
                android:layout_weight="1.0" />

            <ImageButton
                android:id="@+id/loginApp_Douban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:scaleType="center"
                android:src="@drawable/app_douban" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login_register"
        android:visibility="gone">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="23.799988dip"
            android:layout_marginTop="27.199982dip"
            android:src="@drawable/chahao" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23.799988dip"
            android:layout_marginTop="27.199982dip"
            android:src="@drawable/back" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="83.79999dip"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <RelativeLayout
                    android:id="@+id/liangcangName_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="47.0dip"
                    android:layout_marginLeft="35.799988dip"
                    android:layout_marginRight="35.799988dip"
                    android:layout_marginTop="13.799988dip"
                    android:background="@drawable/stroke_white">

                    <ImageView
                        android:id="@+id/icon_liangcangname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="12.0dip"
                        android:src="@drawable/icon_user" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="1.0dip"
                        android:layout_height="30.0dip"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/icon_liangcangname"
                        android:background="#ffffffff" />

                    <EditText
                        android:id="@+id/liangcangName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@id/divider2"
                        android:background="@android:color/transparent"
                        android:hint="用户名"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#ffffffff" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/passwordOne_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="47.0dip"
                    android:layout_below="@id/liangcangName_layout"
                    android:layout_marginLeft="35.799988dip"
                    android:layout_marginRight="35.799988dip"
                    android:layout_marginTop="13.799988dip"
                    android:background="@drawable/stroke_white">

                    <ImageView
                        android:id="@+id/icon_passwordOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="12.0dip"
                        android:src="@drawable/icon_password" />

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="1.0dip"
                        android:layout_height="30.0dip"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/icon_passwordOne"
                        android:background="#ffffffff" />

                    <EditText
                        android:id="@+id/passwordOne"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@id/divider3"
                        android:background="@android:color/transparent"
                        android:hint="输入密码"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#ffffffff" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/passwordTwo_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="47.0dip"
                    android:layout_below="@id/passwordOne_layout"
                    android:layout_marginLeft="35.799988dip"
                    android:layout_marginRight="35.799988dip"
                    android:layout_marginTop="13.799988dip"
                    android:background="@drawable/stroke_white">

                    <ImageView
                        android:id="@+id/icon_lpasswordTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="12.0dip"
                        android:src="@drawable/icon_password" />

                    <View
                        android:id="@+id/divider4"
                        android:layout_width="1.0dip"
                        android:layout_height="30.0dip"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/icon_lpasswordTwo"
                        android:background="#ffffffff" />

                    <EditText
                        android:id="@+id/passwordTwo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@id/divider4"
                        android:background="@android:color/transparent"
                        android:hint="确认密码"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#ffffffff" />
                </RelativeLayout>

                <Button
                    android:id="@+id/register"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/passwordTwo_layout"
                    android:layout_marginLeft="35.799988dip"
                    android:layout_marginRight="35.799988dip"
                    android:layout_marginTop="13.799988dip"
                    android:background="#ff25292e"
                    android:padding="10.0dip"
                    android:text="注册良仓"
                    android:textColor="#ffffffff"
                    android:textSize="17.799988sp" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>