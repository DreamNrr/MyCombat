        android:id="@+id/textview"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ellipsize="end"
        android:singleLine="true"
        android:text="图片标题图片标题图片标题图片标题图片标图片标标题图片标题图片标题"
