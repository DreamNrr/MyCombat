<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_za_zhi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wzh.mycombat.controller.activity.ZaZhiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#e9ecf0"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/left_rl"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1">

            <ImageView

                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_topic_category" />

            <View
                android:id="@+id/left_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="#99e9ecf0"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/right_rl"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1">

            <ImageView

                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_topic_author" />

            <View
                android:id="@+id/right_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="#99e9ecf0" />
        </RelativeLayout>
    </LinearLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#e9ecf0"
        app:tabIndicatorColor="#ced3d9"
        app:tabIndicatorHeight="4dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#7c7e7f"
        app:tabTextColor="#c2c4c7" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:background="#dae0e6"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:background="#000000"
        android:id="@+id/button"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杂志"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/im_down"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/top"
            android:layout_marginLeft="2dp"/>
        </LinearLayout>

</LinearLayout>
